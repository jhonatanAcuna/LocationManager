<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/ubi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Tu ubicación Saldrá aquí"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.373" />

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_map1_foreground"
        app:layout_constraintBottom_toTopOf="@+id/ubi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.734" />

    <TextView
        android:id="@+id/latitud"
        android:layout_width="103dp"
        android:layout_height="29dp"
        android:text="Longitud"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/longitud"
        app:layout_constraintEnd_toStartOf="@+id/id_long"
        app:layout_constraintHorizontal_bias="0.711"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.903" />

    <TextView
        android:id="@+id/longitud"
        android:layout_width="102dp"
        android:layout_height="30dp"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="300dp"
        android:text="Latitud"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/id_lat"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/id_long"
        android:layout_width="173dp"
        android:layout_height="27dp"
        android:hint="Longitud"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/id_lat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintStart_toEndOf="@+id/longitud"
        app:layout_constraintTop_toBottomOf="@+id/ubi"
        app:layout_constraintVertical_bias="0.588" />

    <TextView
        android:id="@+id/id_lat"
        android:layout_width="167dp"
        android:layout_height="29dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="300dp"
        android:hint="Latitud"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>